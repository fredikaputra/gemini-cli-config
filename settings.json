{
  "mcpServers": {
    "laravel-boost": {
      "command": "./vendor/bin/sail",
      "args": [
        "artisan",
        "boost:mcp"
      ]
    },
    "next-devtools": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "app",
        "pnpx",
        "next-devtools-mcp@latest"
      ]
    },
    "shadcn": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "app",
        "pnpx",
        "shadcn@latest",
        "mcp"
      ]
    }
  },
  "ui": {
    "useFullWidth": true
  },
  "tools": {
    "shell": {
      "showColor": true
    }
  },
  "general": {
    "enablePromptCompletion": true
  },
  "ide": {
    "enabled": true
  }
}
